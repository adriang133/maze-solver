{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "no-plusplus": "off",
        "no-continue": "off",
        "no-underscore-dangle": "off",
        "no-restricted-syntax": "off",
        "react/no-array-index-key": "off",
        "react/destructuring-assignment": [
            false
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100
            }
        ]
    },
    "plugins": [
        "prettier"
    ],
    "env": {
        "browser": true
    }
}